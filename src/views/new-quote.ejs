<html>
  <head>
    <title>
      <%= title %>
    </title>
  </head>
  <body>
    <h1><a href='/'>QuoteTyper</a></h1>
    <h2>New Quote</h2>
    <form action='/new-quote' method='POST'>
      Text: <textarea name='new-quote-text' id='new-quote-text' cols='30' rows='6'></textarea><br>
      Author: <input type='text' name='new-quote-author' id='new-quote-author'><br>
      <input type='submit' value='Submit'>
    </form>

    <div id='nav'>
      <ul id='sitemap'>
        <li><a href='/'>Home</a></li>
        <li><a href='/quotes'>Quotes</a></li>
        <% if (isLoggedIn) { %>
          <li><a href='/logout'>Logout</a></li>
          <li><a href='/profile'>Profile</a></li>
          <li><a href='/new-quote'>New Quote</a></li>
          <li><a href='/test'>Typing Test</a></li>
        <% } else { %>
          <li><a href='/login'>Log In</a> or <a href='/signup'>Sign Up</a></li>
        <% } %>
      </ul>
    </div>
  </body>
</html>
